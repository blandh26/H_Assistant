<UserControl
    x:Class="H_Assistant.UserControl.Tags.UcGroupObjects"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:H_Assistant.UserControl.Tags"
    xmlns:localbase="clr-namespace:H_Assistant.UserControl.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <!--  搜索栏  -->
        <Border
            Height="60"
            Margin="10"
            VerticalAlignment="Top"
            Background="#ffffff"
            CornerRadius="8">
            <Grid>
                <hc:SearchBar
                    x:Name="SearchObjects"
                    Height="30"
                    Margin="10,0,110,0"
                    Padding="5,0,5,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    hc:BorderElement.CornerRadius="5"
                    hc:InfoElement.Placeholder="{DynamicResource Table_View_Procedure}"
                    Background="#EFEFF3"
                    BorderThickness="0"
                    FontSize="13"
                    ShowClearButton="True"
                    Style="{StaticResource SearchBarPlus}"
                    TextChanged="SearchObjects_TextChanged" />
                <Button
                    Name="BtnSetGroup"
                    Width="90"
                    Margin="0,0,10,0"
                    Padding="8,8"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    hc:IconElement.Geometry="{StaticResource AddGeometry}"
                    Background="{StaticResource PrimaryBrush}"
                    BorderThickness="0"
                    Click="BtnSetGroup_Click"
                    Content="{DynamicResource GroupManagement}"
                    Foreground="#ffffff" />
            </Grid>
        </Border>
        <!--  搜索栏  -->

        <!--  内容栏  -->
        <Grid>
            <Border
                Margin="10,80,10,45"
                Background="#ffffff"
                CornerRadius="8">
                <Grid Margin="10">
                    <DataGrid
                        x:Name="TableGrid"
                        hc:DataGridAttach.CanUnselectAllWithBlankArea="True"
                        hc:DataGridAttach.ShowRowNumber="True"
                        AutoGenerateColumns="False"
                        Background="#f9f9f9"
                        Cursor="Arrow"
                        HeadersVisibility="All"
                        ItemsSource="{Binding GroupObjectList}"
                        RowHeaderWidth="60"
                        SelectionUnit="Cell">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding ObjectName}"
                                Header="{DynamicResource TableName}"
                                IsReadOnly="True" />
                            <DataGridTemplateColumn Width="120">
                                <DataGridTemplateColumn.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type DataGridCell}">
                                                    <Grid>
                                                        <ContentPresenter HorizontalAlignment="Center" />
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DataGridTemplateColumn.CellStyle>
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{DynamicResource Operate}"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                            x:Name="BtnRowDelete"
                                            Margin="0"
                                            Click="BtnRowDelete_OnClick"
                                            Style="{StaticResource ButtonIconSingle}">
                                            <svgc:SvgViewbox
                                                Width="12"
                                                Height="12"
                                                Source="pack://application:,,,/Resources/svg/btn_del.svg"
                                                ToolTip="{DynamicResource Delete}" />
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <!--  暂无数据  -->
                    <Grid
                        x:Name="MainNoDataText"
                        HorizontalAlignment="Stretch"
                        Background="White"
                        Visibility="Visible">
                        <localbase:NoDataArea
                            x:Name="MainNoDataAreaText"
                            Margin="0"
                            HorizontalAlignment="Center"
                            ShowType="All" />
                    </Grid>
                    <!--  暂无数据  -->
                </Grid>
            </Border>
        </Grid>
        <!--  内容栏  -->

        <!--  操作栏  -->
        <Border
            VerticalAlignment="Bottom"
            Background="#f5f5f5"
            CornerRadius="0 0 8 8">
            <Grid>
                <hc:SimpleStackPanel
                    Margin="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">
                    <hc:UniformSpacingPanel Spacing="10">
                        <Button
                            x:Name="BtnCancel"
                            Height="25"
                            Padding="20,0,20,0"
                            BorderThickness="0.4"
                            Click="BtnCancel_Click"
                            Content="{DynamicResource Close}"
                            Cursor="Hand" />
                    </hc:UniformSpacingPanel>
                </hc:SimpleStackPanel>
            </Grid>
        </Border>
        <!--  操作栏  -->
    </Grid>
</UserControl>
